<%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <section class="section" id="contacto">
        <div class="title">
            <h3>
                <%- title %> 
            </h3>
        </div>
        <div class="content">
            

            <div class="contact-wrapper">
                <div class="form-container">
                   
                    <form action="">
                        <p>
                            <label>nombre</label>
                            <input class="form-input" type="text" name="name">
                        </p>
                        <p>
                            <label>Email</label>
                            <input class="form-input" type="email" name="email">
                        </p>
                        <p>
                            <label>motivo de contacto</label>
                            <input class="form-input" type="text" name="affair">
                        </p>
                        <p class="block">
                           <label>mensaje</label> 
                            <textarea class="form-input" name="message" rows="5"></textarea>
                        </p>
                        <p class="block">
                            <button class="btn-css">
                                enviar
                            </button>
                        </p>
                    </form>
                </div>
                <div class="contact-info">
                    <ul>
                        <li><i class="fas fa-map-marker-alt"></i> Buenos Aires, Argentina </li>      
                        <li><i class="fa-regular fa-envelope"></i> arielhandrade@gimail.com </li>
                        <li><i class="fa-brands fa-linkedin"></i><a href="https://www.linkedin.com/in/arielhandrade/" target="_blank"> linkedin.com/in/arielhandrade/</i></a> </li>
                        <li><i class="fa-brands fa-github"></i><a href="https://github.com/Arielhandrade" target="_blank"> github.com/Arielhandrade</i></a>  </li>
                    </ul>
                    <img style="width: 200px; " src="/images/imgs-decoration/img-contact.png" alt="">
                </div>
            </div>
            
        </div>
    </section>
    </main>
        <%- include('../partials/scripts.ejs') %>
  </body>
</html>