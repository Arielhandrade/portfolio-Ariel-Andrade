<!-- login -->
<div id="form-login" class="form-login-container form-container">

    <form class="form-login" id="loginForm" action='/cuenta/iniciar-sesion' method="POST">
        <div class="btn-closed">
            <i id="close-form-login" class=" fas fa-times"></i>
        </div>
        <h3>Iniciar Sesión</h3>

        <!-- Email -->
        <label>email</label>
        <input class="form-input email" type="email" name="email" id="email">
        <span id="emailErrors"></span>
        <% if (locals.errors && errors.email) { %>
            <small class="text-error">
                <%= errors.email.msg %>
            </small>
            <% } %>

                <!-- Password -->
                <label>contraseña</label>
                <input class="form-input password" type="password" name="password" id="password">
                <span id="passwordErrors"></span>
                <% if (locals.errors && errors.password) { %>
                    <small class="text-error">
                        <%= errors.password.msg %>
                    </small>
                    <% } %>
                        <span class="passwordErrors">
                            <%= (locals.errors && errors.custom && !errors.email &&
                                !errors.password)?errors.custom.msg: "" %>
                        </span>
                        <br>

                        <!-- button log in -->
                        <button class="btn-css btn-login" type="submit" value="log-in">Iniciar Sesión</button>
                        <span id="submitErrors"></span>

    </form>
</div>